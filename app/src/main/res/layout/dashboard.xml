<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivHospital"
            android:layout_width="189dp"
            android:layout_height="264dp"
            android:layout_weight="1"
            android:onClick="ClickHospital"
            app:srcCompat="@drawable/hospital" />

        <ImageView
            android:id="@+id/ivPolice"
            android:layout_width="182dp"
            android:layout_height="264dp"
            android:layout_weight="1"
            android:padding="17dp"
            android:onClick="ClickPolice"
            app:srcCompat="@drawable/police" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivGrocery"
            android:layout_width="189dp"
            android:layout_height="264dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:onClick="ClickGrocery"
            app:srcCompat="@drawable/grocery" />

        <ImageView
            android:id="@+id/ivSchool"
            android:layout_width="182dp"
            android:layout_height="263dp"
            android:layout_weight="1"
            android:padding="17dp"
            android:onClick="ClickSchool"
            app:srcCompat="@drawable/school" />
    </TableRow>
</LinearLayout>